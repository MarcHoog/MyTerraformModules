#cloud-config

debug: True

package_update: true
package_upgrade: true

users:
  - name: "bubble"
    sudo: ["ALL=(ALL) NOPASSWD:ALL"]
%{ for key in ssh_keys ~}
    ssh-authorized-keys:
      - ${key}  

%{ endfor ~}
    groups: [users, admin]
    shell: /bin/bash

runcmd:
  - sed -i '$ a\AllowUsers bubble' /etc/ssh/sshd_config
